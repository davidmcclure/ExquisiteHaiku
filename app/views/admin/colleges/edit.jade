form.form-horizontal(method='post')
  fieldset

    legend Edit <strong>#{college.name}</strong>

    - var name =          form.fields.name
    - var slug =          form.fields.slug
    - var url =           form.fields.url
    - var city =          form.fields.city
    - var state =         form.fields.state
    - var numUndergrads = form.fields.numUndergrads
    - var numGrads =      form.fields.numGrads
    - var admitRate =     form.fields.admitRate
    - var rank =          form.fields.rank
    - var satCR25 =       form.fields.satCR25
    - var satCR75 =       form.fields.satCR75
    - var satM25 =        form.fields.satM25
    - var satM75 =        form.fields.satM75
    - var satW25 =        form.fields.satW25
    - var satW75 =        form.fields.satW75
    - var act25 =         form.fields.act25
    - var act75 =         form.fields.act75

    - var textField =     '../../_includes/form/text_field'

    != partial(textField, { field: name, name: 'name' })
    != partial(textField, { field: slug, name: 'slug' })
    != partial(textField, { field: url, name: 'url' })
    != partial(textField, { field: city, name: 'city' })
    != partial(textField, { field: state, name: 'state' })
    != partial(textField, { field: numUndergrads, name: 'numUndergrads' })
    != partial(textField, { field: numGrads, name: 'numGrads' })
    != partial(textField, { field: admitRate, name: 'admitRate' })
    != partial(textField, { field: rank, name: 'rank' })
    != partial(textField, { field: satCR25, name: 'satCR25' })
    != partial(textField, { field: satCR75, name: 'satCR75' })
    != partial(textField, { field: satM25, name: 'satM25' })
    != partial(textField, { field: satM75, name: 'satM75' })
    != partial(textField, { field: satW25, name: 'satW25' })
    != partial(textField, { field: satW75, name: 'satW75' })
    != partial(textField, { field: act25, name: 'act25' })
    != partial(textField, { field: act75, name: 'act75' })

  div.form-actions
    button.btn.btn-primary(type='submit') Save

