extends layout

block js
  script(src='/javascripts/vendor/load/load.js')
  script(src='/javascripts/apps/create/loader.js')

block content

  form.new(method='post')

    h1.form-header new poem

    // Round length.
    div.control-group.roundLength
      label.control-label(for='roundLengthValue') Round Length
      div.controls
        input(type='text', name='roundLengthValue', autocomplete='off', value=form.fields.roundLengthValue.default)
        div.btn-group(data-toggle='buttons-radio')
          button.btn.btn-small(type='button', class=(form.fields.roundLengthUnit.default=='seconds' ? 'active' : '')) seconds
          button.btn.btn-small(type='button', class=(form.fields.roundLengthUnit.default=='minutes' ? 'active' : '')) minutes
        input(type='hidden', name='roundLengthUnit')

    // Seed capital.
    div.control-group
      label.control-label(for='seedCapital') Starting Points
      div.controls
        input(type='text', name='seedCapital', autocomplete='off', value=form.fields.seedCapital.default)

    // Minimum submissions.
    div.control-group
      label.control-label(for='minSubmissions') Minimum Submissions 
      div.controls
        input(type='text', name='minSubmissions', autocomplete='off', value=form.fields.minSubmissions.default)

    // Submission value.
    div.control-group
      label.control-label(for='submissionVal') Submission Value 
      div.controls
        input(type='text', name='submissionVal', autocomplete='off', value=form.fields.submissionVal.default)

    // Decay lifetime.
    div.control-group
      label.control-label(for='decayLifetime') Decay Halflife
      div.controls
        input(type='text', name='decayLifetime', autocomplete='off', value=form.fields.decayLifetime.default)

    // Published.
    div.control-group
      div.controls
        label.checkbox
          if form.fields.published.default
            input(type='checkbox', name='published', checked='checked')
          else
            input(type='checkbox', name='published')
          span Published

    div.form-actions
      button.btn.btn-large.btn-primary(type='submit') Create
