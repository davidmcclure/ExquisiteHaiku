body
  padding-top 50px

form
  &.login
  &.install
    margin 6em auto 0 20em
    legend
      font-family Damion
      font-size 3em
      padding-bottom 0.5em
      border none
    div.clearfix.error
      padding-top 0
      padding-bottom 0
    h4
      padding-bottom: 0.9em
    input
    textarea
    select
      padding 9px
      color #3a3a3a
      font-size 15px
  div.form-actions
    background none
    border none
    padding 0

a.brand
  font-family Damion

div.subnav
  margin-bottom 1em
  a
  input
    margin 0 1em 0 0
  input
    position relative

table.list
  td.title
    font-weight bold
  th
    font-weight normal
    color gray
  a
    font-weight bold
    margin-right 0.6em
    &.danger
      color #BD362F
