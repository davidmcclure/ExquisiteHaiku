@import 'colors'
@import 'fonts'


::selection
::-moz-selection
  background positive
  color white


body
  font-family "Source Sans Pro"
  font-size 18px
  font-weight 300
  text-rendering optimizeLegibility
  margin 0.5em

p
  font-size 14px

.nav
  margin-right 1em
  font-size 14px
  color black

a.nav

  &:hover
    color negative

  &.active
    color negative


.logo-block
  margin-top 7em

  h1.logo
    margin 5px 0 0 0
    font-weight 300

    a:hover
      text-decoration none

  a.new-poem
    font-size 28px
    margin-top 5px
    font-weight 400

  p.free
    margin 3px 0 0 15px


.secondary-nav
  white-space nowrap

  span
    opacity 0.8


form
  margin 5.4em 5em

  h1.form-header
    margin-bottom 0.5em
    font-weight 300
