body
  padding-top 50px

form
  &.login
  &.install
  &.register
    margin 6em auto 0 20em
    legend
      font-size 3em
      padding-bottom 0.5em
      border none
    div.clearfix.error
      padding-top 0
      padding-bottom 0
    h4
      padding-bottom: 0.9em
  div.form-actions
    background none
    border none
    padding 0

div.subnav
  margin 0.5em 0 1em 0
  a
  input
    margin 0 1em 0 0
  input
    position relative
  a.new
    float left

table.list
  td
    &.title
      font-weight bold
    &.gray
      color #c6c6c6
  th
    font-weight normal
    color gray
  a
    margin-right 0.6em
    &.danger
      color #BD362F
    &.title
    &.action
      font-weight bold
