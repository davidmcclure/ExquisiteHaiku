@import 'colors'
@import 'fonts'


// Text selection color.
// ---------------------

::selection
::-moz-selection
  background positive
  color white


// Top-level assorted.
// -------------------

body
  font-family bodyFont
  font-size 18px
  font-weight 300
  text-rendering optimizeLegibility
  margin 0.5em

p
  font-size 14px

.nav
  margin-right 1em
  font-size 14px
  color black

a.nav
  &:hover
  &.active
    color #08C


.logo-block
  margin-top 3em

  .user
    font-family usernameFont
    line-height 1em
    font-weight 200
    margin-right 1em
    position relative
    top 1px

  h1.logo
    font-family logoFont
    margin 5px 0 0 -3px

    .i
      color #333

    a:hover
      text-decoration none

  a.new-poem
    font-size 19px
    margin-top 5px

  p.free
    margin 3px 0 0 15px


.secondary-nav
  white-space nowrap

  span
    opacity 0.8


form

  h1.form-header
    font-family logoFont
    font-size 1.4em
    margin-bottom 0.5em
    opacity 0.8

  &.inline
    display inline
    margin-right 0.4em

    button
      padding 0
      font-family bodyFont
      font-weight 300
      font-size 1em

  &.login
  &.register
    margin-top 5em

  &#new
    margin-top 2.4em

    input[type='text']
      display inline-block
      font-weight 300
      padding 10px
      font-size 20px
      width 100px
      color #bbb

      &:focus
        color #555

    input[name='roundLengthValue']
      padding 20px
      font-size 35px
      width 80px
      border 2px solid #7e7e7e
      color #555

      &:focus
        border-color #08C

    .control-group
      margin-bottom 5px

      &.error
        input
          border-color #B94A48 !important

    div.roundLength
      margin-bottom .8em

    .btn-group

      button
        padding 1px 9px
        font-weight 400
        font-size 12px
        background-image none


.poem
  margin-bottom 1.6em

  .hash
    display block
    margin-bottom 0.2em
    font-family logoFont
    font-size 16px
    font-weight bold
    color black

    &:hover
      color #08C

  .line
    line-height 24px

  .word
    margin-right 3px

  .actions
    margin-top 0.2em

    button
      margin-right 0.3em
      font-size 0.9em

      &.danger
        color #BD362F
