@import 'colors'
@import 'fonts'


::selection
::-moz-selection
  background positive
  color white


body
  font-family "Source Sans Pro"
  font-size 18px
  font-weight 300
  text-rendering optimizeLegibility
  margin 0.5em

p
  font-size 14px

.nav
  margin-right 1em
  font-size 14px
  color black

a.nav

  &:hover
  &.active
    color #08C


.auth
  font-size 14px


.logo-block
  margin-top 6em

  .user
    font-family "Bowlby One SC"
    line-height 1em
    font-weight 200
    margin-right 1em
    position relative
    top 1px

  h1.logo
    font-family "Bowlby One SC"
    margin 5px 0 0 0
    font-weight 300

    a:hover
      text-decoration none

  a.new-poem
    font-family "Bowlby One SC"
    font-size 26px
    margin-top 5px
    font-weight 300
    padding-bottom 5px

  p.free
    margin 3px 0 0 15px


.secondary-nav
  white-space nowrap

  span
    opacity 0.8


form
  margin-top 5em

  h1.form-header
    font-family "Bowlby One SC"
    font-size 1.4em
    margin-bottom 0.5em
    font-weight 300
    opacity 0.8

  &.new
    margin-top 2.4em

    input
      display inline-block
      padding 10px
      font-size 20px
      width 100px

    input[name='roundLength']
      padding 20px
      font-size 35px
      width 80px
      border 2px solid #7e7e7e

      &:focus
        border-color #08C

    .btn-group
      display inline-block
      margin -9px 0 0 10px

    .control-group
      margin-bottom 5px

    div.roundLength
      margin-bottom 1em
