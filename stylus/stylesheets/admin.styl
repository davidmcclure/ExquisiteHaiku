body
  padding-top 50px

form

  &.login
  &.install
  &.register
    margin 6em auto 0 20em

    legend
      font-size 3em
      border none
      font-weight 300

    div.clearfix.error
      padding-top 0
      padding-bottom 0

    h4
      padding-bottom: 0.9em

  div.form-actions
    background none
    border none
    padding 0

table.list

  td
    &.title
      font-weight bold
    &.gray
      color #c6c6c6

  th
    font-weight normal
    color gray

  a
    margin-right 0.6em

    &.danger
      color #BD362F

    &.title
    &.action
      font-weight bold
