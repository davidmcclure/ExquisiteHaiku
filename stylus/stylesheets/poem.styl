@import 'colors'
@import url('http://fonts.googleapis.com/css?family=Source+Sans+Pro:200')

body
  font 200 18px "Source Sans Pro"
  text-rendering optimizeLegibility
  -webkit-user-select none
  -moz-user-select none
  font-weight 300
  margin 2em


.positive
  color positive

.negative
  color negative

.main
  margin-left 260px

#poem
  margin-bottom 1em

  div.poem-line
    margin-bottom 0.3em

  input.blank
    padding 5px
    margin 0
    width 80px
    border none !important
    border-radius 0
    box-shadow none
    border-bottom 1px solid gray
    background-color whiteSmoke
    font inherit
    &:focus
      outline none

  .poem-word
    margin-right 4px

  .submission-stack
    position absolute
    padding-top 5px

  .submission-word
    cursor pointer


#stack
  z-index 1

  .word
    padding-left 7px
    text-align left
    cursor ns-resize
    &.hover
      color hover
    &.select
      color select

  .ratio
  .churn
    font-size 11px
    text-align right
    font-size 11px

  &.frozen

    .stack-row
      opacity 0.7
      &:hover
        opacity 1

  .stack-row

    &:first-child
      .word
        font-weight bold

    .churn
      margin-left 4px


#log
#overflow
  position fixed
  top 10px

  .log-row
    cursor pointer
    &:hover
      span.word
        opacity 1

    span.value
      margin-right 3px
      font-size 11px


#log
  z-index 2
  direction rtl
  width 230px

  &.frozen
    span.word
      opacity 0.45


#overflow
  z-index 0
  left 520px
  opacity 0.3

#info
  z-index -2
  position fixed
  left 700px
  top 30px

  .info
    font-size 35px
    opacity 0.6

  .label
    color black
    background transparent
    font-style italic
    font-weight normal
    opacity 0.3
    padding-left 3px
    font-size 16px

  #points
    &.preview
      opacity 0.5

  .progress
    margin 3px 0 0 0
    height 5px
    background-image none
    box-shadow none
    border-radius 2px
    width 400px
    z-index -2

    .bar
      text-shadow none
      background-image none
      background-color positive
      box-shadow none
      -moz-transition none;
      -webkit-transition none;
      -o-transition color 0 ease-in;
      transition none;

    &.last
      margin-top 7px


.drag-line
  position fixed
  line-height 0
  z-index -1
  top 0
  left 0

  svg
    position fixed
    stroke-width 2
    top 0
    left 0

    line
    text
      font-size 2em

      &.positive
        stroke positive
        fill positive

      &.negative
        stroke negative
        fill negative

      &.blocked
        stroke preview
        fill preview
