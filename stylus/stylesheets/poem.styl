@import 'colors'

body
  font 300 18px "Helvetica Neue"
  text-rendering optimizeLegibility
  -webkit-user-select none
  -moz-user-select none
  font-weight 300
  margin 2em


.positive
  color positive

.negative
  color negative


#poem
  margin-bottom 1em

  div.poem-line
    margin-bottom 0.3em

  input.blank
    padding 5px
    margin 0
    width 80px
    border none !important
    border-radius 0
    box-shadow none
    border-bottom 1px solid gray
    background-color whiteSmoke
    font inherit
    &:focus
      outline none

  .poem-word
    margin-right 4px

  .submission-stack
    position absolute
    padding-top 5px

  .submission-word
    cursor pointer


#stack
  z-index 1

  .word
    padding-left 7px
    text-align left
    cursor ns-resize
    &.hover
      color hover
    &.select
      color select

  .ratio
  .churn
    font-size 11px
    text-align right
    opacity 0.7
    font-size 11px

  &.frozen
    .word
      opacity 0.45
      &:hover
        opacity 1

  .stack-row
    &:first-child
      .word
        font-weight bold


#log
  z-index 2
  position fixed
  left 360px
  top 10px

  &.frozen
    .primary
      span.word
        opacity 0.45

  td
    vertical-align top
    padding-right 1em

  .log-row
    cursor pointer
    &:hover
      span.word
        opacity 1

    span.value
      margin-left 5px
      opacity 0.7
      font-size 11px


#info
  position fixed
  left 800px
  top 50px

  .info
    font-size 80px
    font-weight bold
    opacity 0.15
    line-height 60px
    margin-bottom 25px

  .label
    color black
    background transparent
    font-style italic
    opacity 0.3
    padding-left 3px
    font-size 16px

  #points
    &.preview
      opacity 0.5

  .progress
    margin 3px 0 7px 0
    background-image none
    box-shadow none
    border-radius 2px

    .bar
      text-shadow none
      background-image none
      box-shadow none


.drag-line
  position fixed
  line-height 0
  z-index -1
  top 0
  left 0

  svg
    position fixed
    stroke-width 2
    top 0
    left 0

    line
    text
      font-size 2em

      &.positive
        stroke positive
        fill positive

      &.negative
        stroke negative
        fill negative

      &.blocked
        stroke preview
        fill preview
