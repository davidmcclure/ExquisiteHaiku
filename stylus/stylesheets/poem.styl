// Google Fonts
@import url(http://fonts.googleapis.com/css?family=Lekton:400,700,400italic)

// Colors
hover = #2260ff
select = #ff0000
frozen = #bbbbbb
positive = #2260ff
negative = #b71515

// Fonts
fonts = Lekton
size = 13px

body
  font-family fonts
  -webkit-user-select none
  -moz-user-select none
  font-size size

.poem-word
  margin-right 4px

.submission-stack
  position absolute

.submission-word
  cursor pointer

#poem
#words
#votes
  float left
  margin-right 2em

.positive
  color positive
.negative
  color negative

#poem

  input.blank
    width 60px
    border none
    border-bottom 1px solid gray
    font-family fonts
    font-size size
    &:focus
      outline none

#words

  .word
    text-align left
    cursor ns-resize
    &.hover
      color hover
    &.select
      color select

  .ratio
  .churn
    text-align right
    opacity 0.7

  &.frozen
    color gray
    .word
      &.hover
        color inherit
        &.select
          color select

  .stack-row
    &:first-child
      .word
        font-weight bold

#votes
  font-family Lekton

  .word
    cursor pointer
    line-height 0.9em

  .value
    margin-left 5px
    opacity 0.7
