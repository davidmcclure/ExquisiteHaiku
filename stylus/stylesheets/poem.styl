@import 'colors'

body
  font 300 18px "Helvetica Neue"
  font-weight 300
  margin 2em
  -webkit-user-select none
  -moz-user-select none

.positive
  color positive

.negative
  color negative

#poem
  margin-bottom 1em

  div.poem-line
    margin-bottom 0.3em

  input.blank
    padding 0 0 3px 3px
    margin 0
    width 80px
    border none
    border-bottom 1px solid gray
    font inherit
    &:focus
      outline none

  .poem-word
    margin-right 4px

  .submission-stack
    position absolute
    padding-top 5px

  .submission-word
    cursor pointer

#stack

  .word
    padding-left 7px
    text-align left
    cursor ns-resize
    &.hover
      color hover
    &.select
      color select

  .ratio
  .churn
    font-size 11px
    width 30px
    text-align right
    opacity 0.7
    font-size 11px

  &.frozen
    .word
      opacity 0.45
      &:hover
        opacity 1

  .stack-row
    &:first-child
      .word
        font-weight bold

.drag-line
  position fixed
  line-height 0
  z-index -1
  top 0
  left 0

  svg
    position fixed
    stroke-width 2
    top 0
    left 0

    line
    text
      font-size 2em

      &.positive
        stroke positive
        fill positive

      &.negative
        stroke negative
        fill negative

      &.blocked
        stroke preview
        fill preview

#log
  position fixed
  left 360px
  top 10px

  &.frozen
    .primary
      span.word
        opacity 0.45

  td
    vertical-align top
    padding-right 1em

  .log-row
    cursor pointer
    &:hover
      span.word
        opacity 1

    span.value
      margin-left 5px
      opacity 0.7
      font-size 11px

#info
  font-size 14px
  opacity 0.6
  text-rendering optimizeLegibility
  margin-bottom 1em

  #points
    &.preview
      opacity 0.5

  #timer
    display inline-block
    text-align right
    width 50px

#measure
  position absolute
  top -1000px
  left -1000px
  white-space pre
