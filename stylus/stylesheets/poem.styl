// Google Fonts
@import url(http://fonts.googleapis.com/css?family=Didact+Gothic)

// Colors
hover = #2260ff
select = #ff0000
frozen = #bbbbbb
positive = #15b765
negative = #b71515

// Fonts
fonts = 'Didact Gothic'
size = 13px

body
  font-family fonts
  -webkit-user-select none
  -moz-user-select none
  font-size size

.poem-word
  margin-right 4px

.submission-stack
  position absolute

.submission-word
  cursor pointer

#poem
  float left

  input.blank
    width 60px
    border none
    border-bottom 1px solid gray
    font-family fonts
    font-size size
    &:focus
      outline none

#stack
  float left

  .word
    text-align left
    cursor ns-resize
    &.hover
      color hover
    &.select
      color select

  .ratio
  .churn
    text-align right
    opacity 0.7
    &.positive
      color positive
    &.negative
      color negative


  &.frozen
    color gray
    .word
      &.hover
        color inherit

  .stack-row
    &:first-child
      .word
        font-weight bold
