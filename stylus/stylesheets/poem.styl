@import 'colors'
@import 'fonts'

body
  font numbers
  -webkit-user-select none
  -moz-user-select none

.positive
  color positive

.negative
  color negative

#poem
#stack
#info
  position absolute

#poem
  width 300px
  top 120px

  div.poem-line
    margin-bottom 0.3em

  input.blank
    width 60px
    border none
    border-bottom 1px solid gray
    font numbers
    &:focus
      outline none

  .poem-word
    margin-right 4px

  .submission-stack
    position absolute

  .submission-word
    cursor pointer

#stack
  width 200px
  top 60px

  .word
    padding-left 7px
    text-align left
    cursor ns-resize
    &.hover
      color hover
    &.select
      color select

  .ratio
  .churn
    font numbers
    width 30px
    text-align right
    opacity 0.7
    font-size 11px

  &.frozen
    color gray
    .word
      &.hover
        color inherit
        &.select
          color select

  .stack-row
    &:first-child
      .word
        font-weight bold

#votes
  font-family Lekton

  .word
    cursor pointer
    line-height 0.9em

  .value
    margin-left 5px
    opacity 0.7
