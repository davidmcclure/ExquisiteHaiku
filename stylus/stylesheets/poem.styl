hover = #2260ff
select = #ff0000
frozen = #bbbbbb

body
  -webkit-user-select none
  -moz-user-select none

.poem-word
  margin-right 4px

.submission-stack
  position absolute

.submission-word
  cursor pointer

#stack

  .word
    text-align left
    cursor ns-resize
    &.hover
      color hover
    &.select
      color select

  .ratio
  .churn
    text-align right

  &.frozen
    color gray

#rank
  .stack-row
    &:first-child
      .stack-word
        font-weight bold
